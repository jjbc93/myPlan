{% extends 'layout.html.twig' %}
    {% block content %}
       <div class="col-lg-6">
       <h2>Listado de eventos</h2>
       {%for message in app.session.flashbag().get('status')%}
       <div class="alert alert-success">{{message}}</div>
       
       {%endfor%}
       <table class="table table-bordered">
        {% for event in events %}
             <tr>
               <td>{{event.nombre}}</td>
               <td>{{event.descripcion}}</td>
               <td>{{event.horario}}</td>
               <td>{{event.fecha}}</td>
               <td>{{event.patrocinadores}}</td>
               <td>{{event.lugar}}</td>
               <td>{{event.direccion}}</td>
               <td>              
              {%for ct in event.categorias%}
               {{ct.descripcion}}
                   <br/>
            {%endfor%}
              </td>
               <td><a class="btn btn-danger" href="{{path('deleteUserEvent',{'id':event.id})}}">Eliminar</a></td>
           </tr>
           {%endfor%}
        </table>
       </div>
       <div class="clearfix"></div>
    
{%endblock%}